{
    "name": "dyslexia-first-web-template",
    "version": "1.0.0",
    "private": true,
    "description": "A modern, accessibility-first web application template built with Next.js 15, React 19, and TypeScript",
    "license": "MIT",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
    },
    "devDependencies": {
        "prettier": "^3.6.2",
        "turbo": "^2.5.6"
    },
    "resolutions": {
        "react": "^19.1.1",
        "react-dom": "^19.1.1"
    },
    "packageManager": "pnpm@8.6.12"
}